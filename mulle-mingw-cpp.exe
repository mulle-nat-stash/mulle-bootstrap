PATH="/usr/local/libexec/mulle-bootstrap:$PATH"
export PATH

[ -z "${MULLE_BOOTSTRAP_MINGW_SH}" ] && . mulle-bootstrap-mingw.sh

#
# fake up a cpp exe for configure scripts in MINGW
#
compiler="`find_msvc_executable "cl.exe" "compiler"`"
if [ -z "${compiler}" ]
then
	fail "Could not find cl.exe in PATH"
fi

CC="${compiler}" MSYS_NO_PATHCONV=1 "${compiler}" \/E "$@"
